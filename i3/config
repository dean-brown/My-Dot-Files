        #Type               border background font
        focused_workspace #a78edb #a78edb #f3ebe2
        active_workspace #333333 #333333 #f3ebe2
        inactive_workspace #5d97fa #5d97fa #f3ebe2
    }
	
    position top
    # Setting a custom i3status
    status_command i3status -c ~/.config/i3/i3status.conf
}
